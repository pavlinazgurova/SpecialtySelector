<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Specialty selector - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Начало", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Поднаправления", "AllSubDepartments", "SubDepartment", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Специалности", "AllSpecialties", "Specialty", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {                        
                        <li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Добави</a>
                            <ul class="dropdown-menu"> 
                                <li>@Html.ActionLink("Направление", "Create", "Department")</li>
                                <li>@Html.ActionLink("Поднаправление", "Create", "SubDepartment")</li>
                                <li>@Html.ActionLink("Специалност", "Create", "Specialty")</li>
                                <li>@Html.ActionLink("Преподавател", "Create", "Teacher")</li>
                                <li>@Html.ActionLink("Предмет", "Create", "Subject")</li>
                            </ul>
                        </li>
                        @*<li>@Html.ActionLink("Добави направление", "Create", "Department")</li>
                        <li>@Html.ActionLink("Добави поднаправление", "Create", "SubDepartment")</li>
                        <li>@Html.ActionLink("Добави Специалност","Create","Specialty")</li>
                        <li>@Html.ActionLink("Добави Преподавател", "Create", "Teacher")</li>*@
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/SpecialtySelector")
    @RenderSection("scripts", required: false)
</body>
</html>